#!/usr/bin/env bash
set -euo pipefail

if (( $# == 0 )); then
  echo "Usage: publish [stable|rc]"
  exit 1
fi

case "$1" in
  stable)
    tag=latest
    ;;
  rc)
    tag=rc
    ;;
  *)
    echo "Invalid tag: $1"
    exit 1
    ;;
esac

if [[ "$1" == stable ]]; then
  echo "Checklist:"
  echo ""
  echo " - Update CHANGELOG.md"
  echo " - Create a git tag"
  echo ""
  echo "Are you ready to publish? [y/n]"
  read -r confirm

  if [[ "$confirm" != y ]]; then
    echo "Aborting"
    exit 1
  fi
fi

echo "Publishing $1 release"

yarn workspaces foreach \
  --topological-dev \
  --all \
  --exclude . \
  npm publish \
  --access=public \
  --tolerate-republish \
  --tag="$tag"
