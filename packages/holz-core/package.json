{
  "name": "@holz/core",
  "version": "0.0.0",
  "description": "A structured logger",
  "main": "./dist/holz-core.umd.js",
  "module": "./dist/holz-core.mjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/PsychoLlama/holz",
    "directory": "packages/holz-core"
  },
  "author": "Jesse Gibson",
  "license": "MIT",
  "types": "./src/index.ts",
  "sideEffects": false,
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
