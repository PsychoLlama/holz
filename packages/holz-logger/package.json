{
  "name": "@holz/logger",
  "version": "0.0.0",
  "description": "A preconfigured, general-purpose logger",
  "type": "module",
  "main": "./dist/browser-logger.cjs",
  "module": "./dist/browser-logger.js",
  "types": "./src/index.browser.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/PsychoLlama/holz",
    "directory": "packages/holz-logger"
  },
  "exports": {
    ".": {
      "node": {
        "types": "./src/index.node.ts",
        "import": "./dist/server-logger.js",
        "require": "./dist/server-logger.cjs"
      },
      "browser": {
        "types": "./src/index.browser.ts",
        "import": "./dist/browser-logger.js",
        "require": "./dist/browser-logger.cjs"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Jesse Gibson",
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "holz",
    "logger",
    "preconfigured",
    "browser",
    "node",
    "deno"
  ],
  "scripts": {
    "prepare": "vite build --sourcemap",
    "test:unit": "vitest --color --passWithNoTests",
    "test:coverage": "run test:unit --coverage"
  },
  "dependencies": {
    "@holz/ansi-terminal-backend": "workspace:*",
    "@holz/console-backend": "workspace:*",
    "@holz/core": "workspace:*",
    "@holz/env-filter": "workspace:*",
    "@holz/stream-backend": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^18.14.0",
    "@vitest/coverage-c8": "0.28.5",
    "vite": "^4.0.0",
    "vitest": "^0.28.5"
  }
}
