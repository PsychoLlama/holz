{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // TODO: Enable once `vite-plugin-dts` upgrades past `typescript@5.8.0`.
    // "erasableSyntaxOnly": true,

    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "module": "ES2020",
    "target": "ESNext",
    "resolveJsonModule": true,
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "types": ["vitest/globals"],
    "paths": {
      "@holz/ansi-terminal-backend": [
        "./packages/holz-ansi-terminal-backend/src/index.ts"
      ],
      "@holz/console-backend": ["./packages/holz-console-backend/src/index.ts"],
      "@holz/core": ["./packages/holz-core/src/index.ts"],
      "@holz/env-filter": ["./packages/holz-env-filter/src/index.ts"],
      "@holz/json-backend": ["./packages/holz-json-backend/src/index.ts"],
      "@holz/logger": [
        "./packages/holz-logger/src/index.node.ts",
        "./packages/holz-logger/src/index.browser.ts"
      ],
      "@holz/pattern-filter": ["./packages/holz-pattern-filter/src/index.ts"],
      "@holz/stream-backend": ["./packages/holz-stream-backend/src/index.ts"],
      "@holz/log-collector": ["./packages/holz-log-collector/src/index.ts"]
    }
  }
}
